@model IEnumerable<CRMSystem.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <style>
        body {
            background-image: url('/photos/Emp.jpg'); /* Adjust the path as needed */
            background-size: cover;
            background-position: center;
            background-repeat: repeat;
        }

        .container {
            /*        background: rgba(255, 255, 255, 0.8);  Light overlay for readability */
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Customer.Name)
                </th>*@
           @* <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateHired)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.LeadID)
